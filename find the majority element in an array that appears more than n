public class MajorityElement {
    public int findMajorityElement(int[] nums) {
        int count = 0;
        int candidate = 0;

               for (int num : nums) {
            if (count == 0) {
                candidate = num;
            }
            count += (num == candidate) ? 1 : -1;
        }

      
        int frequency = 0;
        for (int num : nums) {
            if (num == candidate) {
                frequency++;
            }
        }

        if (frequency > nums.length / 2) {
            return candidate;
        } else {
            throw new IllegalArgumentException("No majority element found");
        }
    }
}


TIME COMPLEXITY = O(N)
SPACE COMPLEXITYÂ =O(1)
